---Reattack
local oldTarget
addIcon("Re", {item={id= 3049, count=1}, text = "ReA"}, macro(400, "Hold Target", nil, function()
  if g_game.isAttacking() then
    oldTarget = g_game.getAttackingCreature()
  end
  if (oldTarget and oldTarget:getPosition()) then
    if (not g_game.isAttacking() and getDistanceBetween(pos(), oldTarget:getPosition()) <= 8) then
      if (oldTarget:getPosition().z == posz()) then
        g_game.attack(oldTarget)
      end
    end
  end
end))



local key = 11087
local sItems = {4065, 4042}
addIcon("skurkowacz", {item={id= 3049, count=1}, text="skurkowacz"}, macro(100, "Podnoszenie itemów", function()
  for _, tile in ipairs(g_map.getTiles(posz())) do
    if getDistanceBetween(pos(), tile:getPosition()) <= 7 then
    local things = tile:getThings()
        for _, item in pairs(things) do
            if table.find(sItems, item:getId()) then
           useWith(key, item)
-- CaveBot.delay(1100)
            return
        end
      end
    end
  end
end))



macro(1000, " HP %", function()
  for _, creature in ipairs(getSpectators()) do
    local hp = creature:getHealthPercent()
    creature:setText(string.format("%d%%", hp), hp > 50 and "green" or (hp > 25 and "orange" or "red"))
  end
end)

addIcon("TargetAlarm",{item = {id = 3049, count=1},text="Target Alarm"},macro(500, "Target Alarm", function()
  if not g_game.isAttacking() then
    playSound("/sounds/magnum.ogg")
      delay(1000)
  end
end))


addIcon("CwelNaEkranie",{item={id=3049, count=1},text="cwele na ekranie"},macro(500, "cwel na ekranie", function()
  for _, creature in ipairs(getSpectators()) do
    if creature:isPlayer() and creature:getName() ~= name() then
      playSound("/sounds/magnum.ogg")
      modules.game_textmessage.displayGameMessage("Gracz: " .. creature:getName() .. " na ekranie!",   MESSAGE_INFO_DESCR)
      return 
    end
  end
end))


