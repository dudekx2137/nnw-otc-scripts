function itemAmount(id)
  return player:getItemsCount(id)
end
local ex = 1000 
addIcon("buy soldier", {item={id= 3049, count=1}, text="Bsp"}, macro(500, function()
 if itemAmount(3028) <= 100 and itemAmount(3043) >= 2 then 
    say("!buy soldier pills")
    delay(ex)
  end
end))
