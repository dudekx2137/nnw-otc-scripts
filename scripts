UI.Label("----AutoParty----")
UI.Label("Podaj nicki graczy do party:")
---autoparty
local kurwiszony_do_party = {}

local function contains(table, val)
  for i = 1, #table do
    if table[i]:lower() == val:lower() then
      return true
    end
  end
  return false
end
local function updatePartyList(widget, text)
  kurwiszony_do_party = {}
  for name in text:gmatch("[^,]+") do
    table.insert(kurwiszony_do_party, name:trim())
  end
end
addTextEdit("PartyNames", table.concat(kurwiszony_do_party, ", "), function(widget, text)
  updatePartyList(widget, text)
end)
macro(2000, "Auto Party Invite", function()
  for _, spec in ipairs(getSpectators()) do
    if contains(kurwiszony_do_party, spec:getName()) and not spec:isPartyMember() then
      g_game.partyInvite(spec:getId())
      modules.game_textmessage.displayGameMessage("? Zaproszono do party: " .. spec:getName(), MESSAGE_STATUS_WARNING)
    end
  end
end)
--alarm gdy uzbiera itemy
UI.Label("----ItemAlarm----")
local itemIdToWatch = 0
local itemThreshold = 100

local function updateItemId(widget, text)
  itemIdToWatch = tonumber(text) or itemIdToWatch
end

local function updateItemThreshold(widget, text)
  itemThreshold = tonumber(text) or itemThreshold
end
UI.Label("Podaj id itemu:")
addTextEdit("ItemIdInput", tostring(itemIdToWatch), function(widget, text)
  updateItemId(widget, text)
end)

UI.Label("Podaj ilosc do uzbierania:")
addTextEdit("ItemThresholdInput", tostring(itemThreshold), function(widget, text)
  updateItemThreshold(widget, text)
end)

addIcon("ItemAlarm", {item={id = 11676, count=1}, text="Item Alarm"},macro(2500, "Item Alarm", function()
  local count = 0
  for _, container in pairs(g_game.getContainers()) do
    for _, item in ipairs(container:getItems()) do
      if item:getId() == itemIdToWatch then
        count = count + item:getCount()
      end
    end
  end
  
  if count >= itemThreshold then
    playSound("/sounds/magnum.ogg")
    modules.game_textmessage.displayGameMessage("Masz " .. count .. "x itemka!", MESSAGE_STATUS_WARNING)
  end
end))
UI.Separator()

------pauzowanie targetingu/cavebota--------
local function setIcon(widget)
  widget.setOn(false)
  widget:setHeight(15)
  widget:setFont("verdana-11px-rounded")
end

local function getColor(macro)
  return macro.isOn() and "green" or "red"
end

local function getStatus(macro)
  return macro.isOn() and "ON" or "OFF"
end

local function toggle(macro)
  if macro.isOn() then
    macro.setOff()
  else
    macro.setOn()
  end
end

local function setCaveBotBehavior(widget)
  setIcon(widget)
  widget:setWidth(90)
  toggle(CaveBot)
  widget:setColoredText({"CaveBot: ", "yellow", getStatus(CaveBot), getColor(CaveBot)})  
end

local function setTargetBotBehavior(widget) 
  setIcon(widget)
  widget:setWidth(90)
  toggle(TargetBot)
  widget:setColoredText({"TargetBot: ", "yellow", getStatus(TargetBot), getColor(TargetBot)})
end

addIcon("TargetBotIcon", {item=0, text="", movable=true}, function(widget, enabled)
  setTargetBotBehavior(widget)
end)

addIcon("CaveBotIcon", {item=0, text="", movable=true}, function(widget, enabled)
  setCaveBotBehavior(widget)
end)

---Reattack
local oldTarget
addIcon("Re", {item={id= 11676, count=1}, text = "ReA"}, macro(400, "Hold Target", nil, function()
  if g_game.isAttacking() then
    oldTarget = g_game.getAttackingCreature()
  end
  if (oldTarget and oldTarget:getPosition()) then
    if (not g_game.isAttacking() and getDistanceBetween(pos(), oldTarget:getPosition()) <= 8) then
      if (oldTarget:getPosition().z == posz()) then
        g_game.attack(oldTarget)
      end
    end
  end
end))
----hp% mobow
macro(1000, " HP %", function()
  for _, creature in ipairs(getSpectators()) do
    local hp = creature:getHealthPercent()
    creature:setText(string.format("%d%%", hp), hp > 50 and "green" or (hp > 25 and "orange" or "red"))
  end
end)
