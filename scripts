UI.Label("EXP");
addIcon("PVESPELL", {item={id= 11676, count=1}, text="PVE"}, macro(250,  function()
  local distance = 2
  local mobsAmount = 3
  local specAmount = 0
  for i,mob in ipairs(getSpectators()) do
  if not g_game.isAttacking() then return end
  if getDistanceBetween(player:getPosition(), mob:getPosition())   <= distance and mob:isMonster() then
    specAmount = specAmount + 1
end
end
if (specAmount >= mobsAmount) then    
  say(storage.spell3)
  
else
  say(storage.spell4)
  say(storage.spell5)
end
end))
addTextEdit("spell3", storage.spell3 , function(widget, text) 
  storage.spell3 = text
end)
addTextEdit("spell4", storage.spell4 , function(widget, text) 
  storage.spell4 = text
end)
